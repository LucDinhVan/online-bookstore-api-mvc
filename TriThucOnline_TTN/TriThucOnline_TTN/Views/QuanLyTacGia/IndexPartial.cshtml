@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<TriThucOnline_TTN.Models.Author>

<div class="table-responsive">
    <table class="table table-condensed table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <span class="text-primary">Mã</span>

                </th>
                <th>
                    <span class="text-primary">Tên tác giả</span>
                </th>
                <th>
                    <span class="text-primary">Ảnh tác giả</span>
                </th>
                <th>
                    <span class="text-primary">Chức năng</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <img src="@item.picture" class="img-responsive" style="width: 150px; height: auto"/>
                     </td>
                    <td>
                        <button onclick="edit('@item.id', '@item.name', '@item.picture', '@item.info')" style="color:blue">
                            <i class="far fa-edit"></i>
                        </button>
                        <button onclick="ChiTietTG('@item.id')">
                            <i class="fas fa-info-circle"></i>
                        </button>
                        <button onclick="delete_article('@item.id', @Model.PageNumber)" style="color:red">
                            <i class="far fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
