
@model IEnumerable<TriThucOnline_TTN.Models.DAUSACH>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .pic_book {
            height: 66%;
        }

        .title_book {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 15%;
        }

        .price_book {
            font-weight: 700;
            font-size: 20px;
            color: red;
        }
        .search_giatien input{
            width:90px;
        }
        .tk_giatien {
            width: 71%!important;
            background-color: #00ff6f;
            border: none;
            border-radius: 20px;
            padding: 5px;
        }
    </style>


    <div class="container-fluid">

        <div class="row" style="display:flex; margin-top:20px;">

            <div class="col-sm-3">
                <h5>
                    <i class="fas fa-filter">Bộ lọc tìm kiếm</i>

                </h5>
                @using (Html.BeginForm())
                {

                    <div class="search_tacgia">
                        <ul>
                            <b>Lọc theo tác giả</b>

                            @foreach (var item in ViewBag.TacGia)
                            {

                                <li>
                                    @Html.RadioButton("@item.TenTG", "@item.TenTG")
                                    <label for="@item.TenTG">@item.TenTG </label>
                                </li>

                            }
                        </ul>
                    </div>
                    <div class="search_theloai">

                        <ul>
                            <b>Lọc theo thể loại</b>
                            @foreach (var item in ViewBag.TheLoai)
                            {

                                <li>
                                    @Html.RadioButton("@item.TenTL", "@item.TenTL")
                                    <label for="@item.TenTL">@item.TenTL </label>
                                </li>

                            }
                        </ul>
                    </div>
                    <div class="search_nxb">

                        <ul>
                            <b>Lọc theo nhà xuất bản</b>
                            @foreach (var item in ViewBag.NXB)
                            {

                                <li>
                                    @Html.RadioButton("@item.TenNXB", "@item.TenNXB")
                                    <label for="@item.TenNXB">@item.TenNXB </label>

                                </li>

                            }
                        </ul>
                    </div>
                    <div class="search_giatien">
                        <b>Lọc theo giá trị tiền từ </b>
                        <br />
                        <input type="number" name="giatien_min" id="giatien" value="" />
                        <label>đến</label>
                        <input type="number" name="giatien_max" id="giatien" value="" />
                        <input type="submit" name="apdung" value="Áp Dụng" class="tk_giatien" />
                    </div>
                }


            </div>
            <div class="col-sm-9">
                <h5 style="margin-bottom:20px">
                    <i class="fas fa-search-dollar">Kết quả tìm kiếm cho từ khoá '@ViewBag.search'</i>

                </h5>
                <div class="row">


                    @foreach (var item in Model)
                    {

                        <div class="col-sm-3" style="height:300px;">
                            @*<td>@Model.Rows[i][0]</td>*@
                            <a href="@Url.Action("Details", "DAUSACH", new { @id = item.MaSach })">

                                <img class="pic_book" src="@Url.Content("/Content/HinhAnhSP/" + @item.PicBook)" alt="Alternate Text" />
                                <p class="title_book">@item.TenSach</p>
                            </a>
                            <p class="price_book">@string.Format("{0:0,0}", item.GiaTien)</p>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


