                //    required: "Hãy nhập địa chỉ email",
                //    Email: "Địa chỉ email không hợp lệ"
                //},

                DiaChi: "Hãy điền địa chỉ.",
                DienThoai: "Hãy điền số điện thoại.",

                HoTen: "Hãy điền họ tên.",
                NgaySinh: "Hãy chọn ngày sinh.",
                TaiKhoan: "Hãy điền tài khoản.",
                MatKhau: "Hãy điền mật khẩu."


            }
        });
    });


function check() {
    var value_email = document.getElementById("email").value;
    var value_pwd = document.getElementById("pwd").value;
    var value_username = document.getElementById("name").value;
    var value_dob = document.getElementById("ngaysinh").value;

    var email_valid 

     @*   /([A-Z|a-z|0-9](\.|_){0,1})+[A-Z|a-z|0-9]@([A-Z|a-z|0-9])+((\.){0,1}[A-Z|a-z|0-9]){0,3}\.[a-z]{2,3}$/i;*@
    var name_valid = /[\D]*?( [\D]*)$/i;
    var dob_valid = /\b(0?[1-9]|[12]\d|3[01])[\/\-.](0?[1-9]|[1]?[0-2])[\/\-.](\d{4})\b/i;

    if (!value_email.match(email_valid)) {
        document.getElementById('checkEmail').innerHTML = "<font color='red'>Không đúng định dạng email!</font>";
    }
    else {
        document.getElementById('checkEmail').innerHTML = "<font color='green'>Hợp lệ!</font>";
    }
    if ((value_pwd + '').length < 6) {
        document.getElementById('checkPwd').innerHTML = "<font color='red'>Mật khẩu phải lớn hơn 6 ký tự!</font>";
    }
    else {
        if ((value_pwd + '').length > 29) {
            document.getElementById('checkPwd').innerHTML = "<font color='red'>Mật khẩu phải ngắn hơn 30 ký tự!</font>";
        }
        else {
            document.getElementById('checkPwd').innerHTML = "<font color='green'>Hợp lệ!</font>";
        }
    }
    if (!value_username.match(name_valid)) {
        document.getElementById('checkName').innerHTML = "<font color='red'>Họ tên chỉ bao gồm các ký tự chữ cái!</font>";
    }
    else {
        document.getElementById('checkName').innerHTML = "<font color='green'>Hợp lệ!</font>";
    }
    if (!value_dob.match(dob_valid)) {
        document.getElementById('checkNgaySinh').innerHTML = "<font color='red'>Nhập ngày sinh theo đúng định dạng dd-mm-yyyy</font>";
    }
    else {
        document.getElementById('checkNgaySinh').innerHTML = "<font color='green'>Hợp lệ!</font>";
    }
}



</script>
<style>
    /*các thông báo lỗi sẽ được chứa trong các label với class là error*/
    label.error {
        color: red;
    }
</style>







