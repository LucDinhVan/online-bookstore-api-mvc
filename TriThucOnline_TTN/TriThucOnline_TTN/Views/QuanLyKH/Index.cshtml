@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<TriThucOnline_TTN.Models.User>

@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/Register/css/style.css">
<script src="~/Scripts/jquery-3.5.0.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<h2>Quản lý khách hàng</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @*<a href="@Url.Action("Create")" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Thêm khách hàng</a>*@
</p>
<div id="Xoa_KH">
    @{ Html.RenderPartial("IndexPartial");}
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
<script>
    function delete_article(Id) {
        var answer = confirm("Bạn có chắc muốn xóa khách hàng này?");
        if (answer) {
            //alert('Xác nhận xóa');
            Remove(Id);
        }
    }

    function Remove(Id) {
        $.ajax({
            type: 'POST',
            url: '/QuanLyKH/Remove',
            data: { id: Id },
            success: function (data) {
                $.post(data.Url, function (partial) {
                    $("#Xoa_KH").html(partial);
                });
            },
            error: function () {
                alert("Đã có lỗi xảy ra khi xóa");
            }
        });
    }

    function ChiTietKH(makh) {
        $.ajax({
            type: 'GET',
            url: '/QuanLyKH/XemCTKHPartial?id='+makh,
            success: function (data) {
                    $("#All_Dialog").html(data)
            }
        });
        $('#myModal').on('shown.bs.modal', function () {
            $(this).find('.modal-dialog').css({
                width: '100%',
                height: 'auto',
                'max-height': '100%',
                'max-width': '1000px',
            });
        });
        $("#myModal").modal();
    }

    function ChiTietDHKH(makh) {
        $.ajax({
            type: 'POST',
            url: '/QuanLyKH/XemCTDHKH',
            data: { makh: makh },
            success: function (data) {
                $.post(data.Url, function (partial) {
                    $("#All_Dialog").html(partial)
                });
            }
        });
        $('#myModal').on('shown.bs.modal', function () {
            $(this).find('.modal-dialog').css({
                width: '100%',
                height: 'auto',
                'max-height': '100%',
                'max-width': '1000px',
            });
        });
        $("#myModal").modal();
    }
</script>
@* đây là cái bảng dialog *@
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Chi tiết khách hàng</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @* nội dung bên trong all_dialog *@
                <div id="All_Dialog"></div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>