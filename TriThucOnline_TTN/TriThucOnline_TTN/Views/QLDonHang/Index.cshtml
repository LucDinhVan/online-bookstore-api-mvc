    <script>
        function ChiTietDH(madh, user_name, address, province_code, district, ward, phone) {
            $('#orderModal').on('shown.bs.modal', function () {
                $(this).find('.modal-dialog').css({
                    width: '70%',
                    height: 'auto',
                    'max-height': '100%',
                    'max-width': '1000px',
                });
            });
            $("#orderModal").modal();
            $.ajax({
                type: 'GET',
                url: '/QLDonHang/XemCTDHPartial?id='+madh,
                success: function (data) {
                    $("#All_Dialog_order").html(data);
                    var settings = {
                    "url": "https://bookstore-api-v1.herokuapp.com/api/v1/address/district/"+district,
                    "method": "GET",
                    "timeout": 0,
                    };
                    $.ajax(settings).done(function (response) {
                    response.wards.forEach((element)=>{
                            if(element.ward_code == ward){
                                console.log(element.ward_name);
                                $("#customer_address").append('<b>'+address+", "+element.ward_name);
                            }
                        })
                    });
                    
                    settings = {
                    "url": "https://bookstore-api-v1.herokuapp.com/api/v1/address/province/"+province_code,
                    "method": "GET",
                    "timeout": 0,
                    };
                    $.ajax(settings).done(function (response) {
                    response.districts.forEach((element)=>{
                            if(element.district_code == district){
                                console.log(element.district_name);
                                $("#customer_address").append(", "+element.district_name+", "+localStorage.getItem(province_code)+'</b>');
                            } 
                        })
                    });
                    $("#customer_phone").append("<b>"+phone+"</b>");
                    $("#customer_name").append("<b>"+user_name+"</b>");
                    $("#update_btn")[0].value = madh;
                }
            });   
        }

        function UpdateStatus(){
            let status = $("#order_status").val();
            let madh =  $("#update_btn")[0].value;
            $("#orderModal").modal('hide');
            $.ajax({
                type: "POST",
                url: '/QLDonHang/Update',
                data: {id : madh, status:status}, // serializes the form's elements.
                success: function(data)
                {
                    
                    $("#deletedModal").modal();
                    location.href=location.href;
                },
                error: function(){
                    alert("Đã có lỗi xảy ra khi truy vấn");
                }
            });
        }

        function ChiTietKH(makh) {
            $.ajax({
                type: 'GET',
                url: '/QuanLyKH/XemCTKHPartial?id='+makh,
                success: function (data) {
                    $("#All_Dialog").html(data)
                }
            });
            $("#update_btn").hide()
            $('#title_modal').text("Thông tin khách hàng");
            $('#myModal').on('shown.bs.modal', function () {
                $(this).find('.modal-dialog').css({
                    width: '100%',
                    height: 'auto',
                    'max-height': '100%',
                    'max-width': '1000px',
                });
            });
            $("#myModal").modal();
        }

        $(document).ready(function () {
            var settings = {
            "url": "https://bookstore-api-v1.herokuapp.com/api/v1/address/",
            "method": "GET",
            "timeout": 0,
            };

            $.ajax(settings).done(function (response) {
            response.provinces.forEach((element)=>{
                    localStorage.setItem(element.province_code, element.province_name)
                })
            });
        })
    </script>
