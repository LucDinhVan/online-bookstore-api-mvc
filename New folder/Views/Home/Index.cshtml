@model IEnumerable < TriThucOnline_TTN.Models.DAUSACH>


@{
    ViewBag.Title = "Cửa hàng sách trực tuyến";
}



<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" type="text/css" href="Scripts/slick/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="Scripts/slick/slick/slick-theme.css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan+2:400,700&display=swap&subset=vietnamese" rel="stylesheet">

    @Styles.Render("/Assets/User/css/style_home.css")

<style>

    .pic_book {
        height: 66%;
    }

    .title_book {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 15%;
    }

    .price_book {
        font-weight: 700;
        font-size: 20px;
        color: red;
    }
</style>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-3" style="padding-right:0;">
                <div class="vertical-menu">
                    <h4>Danh Mục Sản Phẩm</h4>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 1 })"><i class="fas fa-book-reader"></i>Văn Học</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 2 })"><i class="fas fa-child"></i>sách thiếu nhi</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 3 })"><i class="fas fa-history"></i>Tiểu sử hồi kí</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 4 })"><i class="fas fa-book"></i>sách giáo khoa - tham khảo</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 5 })"><i class="fas fa-language"></i>sách Ngoại ngữ</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 6 })"><i class="fas fa-chart-line"></i>Kinh Tế</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 7 })"><i class="far fa-grin"></i>Tâm Lí - Kĩ năng sống</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 8 })"><i class="fas fa-baby"></i>Nuôi dạy con</a>
                    <a href="@Url.Action("Details", "THELOAI", new { @id = 9 })"><i class="fas fa-pencil-ruler"></i>Văn phòng phẩm</a>
                </div>
            </div>
            <div class="col-lg-9" style="padding-left:0;">
                <section class="regular slider" style="margin-top:0;">
                    <div>
                        <img src="https://static.ybox.vn/2018/5/4/1526528133509-Slide1.JPG">
                    </div>
                    <div>
                        <img src="https://static.ybox.vn/2018/5/4/1526528133509-Slide1.JPG">
                    </div>
                    <div>
                        <img src="https://static.ybox.vn/2018/5/4/1526528133509-Slide1.JPG">
                    </div>
                    <div>
                        <img src="https://static.ybox.vn/2018/5/4/1526528133509-Slide1.JPG">
                    </div>
                    <div>
                        <img src="https://static.ybox.vn/2018/5/4/1526528133509-Slide1.JPG">
                    </div>

                </section>

            </div>
        </div>

    </div>

    @*===================================== BANNER - CENTER- ADVERTISMENT =======================*@

    <div class="container-fluid banner-center">
        <div class="row">
            <div class="col-md-4">
                <i class="fas fa-star-of-david"></i>
                <p>Cung cấp các đầu sách chính hãng, chất lượng nhất </p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-fighter-jet"></i>
                <p>Giao hàng nhanh chóng</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-hand-holding-usd"></i>
                <p>Chính sách đổi trả, hoàn tiền dễ dàng</p>
            </div>
        </div>
    </div>

    @*================================ TAB-MENU  BOOK -=========================================*@



    <div class="container">
        <h2>Các thể loại sách</h2>
        <br>
        <!-- Nav tabs -->
        <ul class="nav nav-pills" role="tablist">
            <li class="nav-item active">
                <a class="nav-link" data-toggle="tab" href="#vanhoc">Văn học</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#kinhte">Kinh tế</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tamli">Tâm lí-Kĩ năng sống</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#daycon">Nuôi dạy con</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#thieunhi">Sách thiếu nhi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#hoiki">Tiểu sử-hồi kí</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#giaokhoa">Sách giáo khoa-tham khảo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#ngoaingu">Sách học ngoại ngữ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#vanphongpham">Văn Phòng Phẩm</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="vanhoc" class="container tab-pane active">
                <br>
                <section class="center slider" style="">
                    @foreach (var item in Model)
                    {
                        <div style="height:300px">
                            @*<td>@Model.Rows[i][0]</td>*@
                            <a href="@Url.Action("Details", "DAUSACH", new { @id = item.MaSach })">

                                <img class="pic_book" src="@item.PicBook" alt="Alternate Text" />
                                <p class="title_book">@item.TenSach</p>
                            </a>
                            <p class="price_book">@item.GiaTien</p>

                        </div>
                    }
                </section>

            </div>
            <div id="kinhte" class="container tab-pane fade">
                <br>
                @{
                    ViewBag.Items = new List<string>() { "siêu cường kinh tế", "Sói già phố Wall", "khởi nghiệp tinh gọn" };
                    Html.RenderPartial("MenuTabHome_PartialView");
                }
            </div>
            <div id="tamli" class="container tab-pane fade">
                <br>
                @{
                    ViewBag.Items = new List<string>() { "đọc vị bất kì ai", "thủ thuật tâm lí", "tâm lí đám đông" };
                    Html.RenderPartial("MenuTabHome_PartialView");
                }
            </div>
            <div id="daycon" class="container tab-pane fade">
                <br>

            </div>
            <div id="thieunhi" class="container tab-pane fade">
                <br>

            </div>
            <div id="hoiki" class="container tab-pane fade">
                <br>

            </div>
            <div id="giaokhoa" class="container tab-pane fade">
                <br>

            </div>
            <div id="ngoaingu" class="container tab-pane fade">
                <br>

            </div>
            <div id="vanphongpham" class="container tab-pane fade">
                <br>

            </div>
        </div>
    </div>





















    <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/slick/slick/slick.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        $(document).on('ready', function () {

            $(".regular").slick({
                dots: true,
                infinite: true,
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000
            });
            $(".center").slick({
                dots: true,
                infinite: true,
                centerMode: true,
                slidesToShow: 5,
                slidesToScroll: 3,
                responsive: [
              {
                  breakpoint: 1000,
                  settings: {
                      slidesToShow: 3,
                      slidesToScroll: 2,
                      infinite: true,
                      dots: true
                  }
              },
              {
                  breakpoint: 600,
                  settings: {
                      slidesToShow: 2,
                      slidesToScroll: 1
                  }
              }
            ]
            });

        });
    </script>

</body>
</html>

